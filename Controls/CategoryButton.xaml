<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Controls.CategoryButton"
             xmlns:views="clr-namespace:MauiApp1.Views">

    <Button x:Name="InnerButton"
            HeightRequest="40"
            WidthRequest="160"
            CornerRadius="15"
            FontAttributes="Bold"
            BorderColor="#CCCCCC"
            BorderWidth="1"
            Margin="4"
            Text="{Binding Name}"
            BackgroundColor="{Binding BackgroundColor}"
            TextColor="{Binding TextColor}"
            Command="{Binding Source={RelativeSource AncestorType={x:Type views:MainPage}},
                              Path=BindingContext.FilterCommand}"
            CommandParameter="{Binding Name}">

        <!-- Selected state disables hover -->
        <Button.Triggers>
            <DataTrigger TargetType="Button"
                         Binding="{Binding IsSelected}"
                         Value="True">
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup Name="NoHover"/>
                    </VisualStateGroupList>
                </Setter>
            </DataTrigger>
        </Button.Triggers>
    </Button>
</ContentView>
